tr
  td = user.name
  td = user.phone
  td = user.email
  td = user.points
  td.user-operations
    - if can?(:update, user) && can?(:destroy, user)
      = form_for(user, method: :put) do |f|
        = label_tag do
          = f.check_box :admin
          | 管理员

      = link_to('删除', user, 
        class: 'btn btn-danger btn-xs', 
        method: :delete,
        data: {confirm: '您确定删除该用户吗?'})

